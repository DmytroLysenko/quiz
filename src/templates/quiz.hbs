<h2 class="guizTitle">{{name}}</h2>
<form action="" class="quizeForm">
    <ul class="quizList">
        {{#each items}}
        <li class="questionItem">
            <h3 class="questionTitle">Question-{{this.id}} - {{this.question}}</h3>
            <ul class="answerList">
                {{#each this.choices}}
                <li class="answerItem">
                    <label>
                        <input type="checkbox" name="question_{{@root.items.id}}" id="answer_{{@index}}" />
                        {{this}}
                    </label>
                </li>
                {{/each}}
            </ul>
        </li>
        {{/each}}
    </ul>
    <button type='submit'>Submit</button>
</form>


